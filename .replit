modules = ["nodejs-22"]
[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SkateHubba API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SkateHubba Admin"

[[workflows.workflow]]
name = "SkateHubba API"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node apps/server/dist/server/index.js"
waitForPort = 8000

[[workflows.workflow]]
name = "SkateHubba Admin"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/admin && ../../node_modules/.bin/next dev -p 5000 -H 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8001
externalPort = 80

[agent]
expertMode = true

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "NODE_ENV=production node apps/server/dist/server/index.js"]
build = ["sh", "-c", "pnpm install --frozen-lockfile && pnpm run build --filter @skatehubba/server"]

[nix]
channel = "stable-25_05"
