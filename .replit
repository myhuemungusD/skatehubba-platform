modules = ["nodejs-20", "python-3.11", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_openai_ai_integrations:1.0.0", "python_openai_ai_integrations:1.0.0", "javascript_mem_db:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["zulu23"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SkateHubba Status"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SkateHubba API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SkateHubba Web"

[[workflows.workflow]]
name = "SkateHubba Status"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node status-check.js"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "SkateHubba API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/apps/server && NODE_ENV=development node ../../node_modules/tsx/dist/cli.mjs server/index.ts"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "SkateHubba Web"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/apps/web && pnpm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000
