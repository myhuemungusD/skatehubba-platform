modules = ["nodejs-22"]
[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SkateHubba API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SkateHubba Web"

[[workflows.workflow]]
name = "SkateHubba API"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node apps/server/dist/server/index.js"
waitForPort = 8000

[[workflows.workflow]]
name = "SkateHubba Web"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/apps/web && npx vite --host 0.0.0.0 --port 5000"
waitForPort = 5000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[agent]
expertMode = true

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "NODE_ENV=production node apps/server/dist/server/index.js"]
build = ["sh", "-c", "pnpm install --frozen-lockfile && pnpm run build --filter @skatehubba/server"]

[nix]
channel = "stable-25_05"
