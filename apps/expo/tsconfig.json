{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./src/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@native/*": ["./src/native/*"],
      "@lib/*": ["./lib/*"],
      "@skatehubba/*": ["../../packages/*/src"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src",
    "lib"
  ]
}
