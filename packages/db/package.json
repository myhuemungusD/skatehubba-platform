{
  "name": "@skatehubba/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js",
      "default": "./dist/schema.js"
    },
    "./validations": {
      "types": "./dist/validations.d.ts",
      "import": "./dist/validations.js",
      "default": "./dist/validations.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "tsup": {
    "entry": {
      "index": "src/index.ts",
      "schema": "src/schema.ts",
      "validations": "src/validations.ts"
    },
    "format": [
      "esm"
    ],
    "dts": true,
    "clean": true,
    "sourcemap": true,
    "outDir": "dist",
    "skipNodeModulesBundle": true
  },
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.14.15",
    "drizzle-kit": "^0.24.2",
    "tsup": "^8.2.4",
    "typescript": "~5.9.2"
  }
}
