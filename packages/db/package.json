{
  "name": "@skatehubba/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./src/index.ts",
  "files": ["dist", "src"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "tsup": {
    "entry": {
      "index": "src/index.ts",
      "schema": "src/schema.ts",
      "validations": "src/validations.ts"
    },
    "format": ["esm"],
    "dts": true,
    "clean": true,
    "sourcemap": true,
    "outDir": "dist",
    "skipNodeModulesBundle": true
  },
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.14.15",
    "drizzle-kit": "^0.24.2",
    "tsup": "^8.2.4",
    "typescript": "~5.9.2"
  }
}
