{
  "name": "@skatehubba/ui",
  "version": "0.0.0",
  "private": true,
  "description": "SkateHubba UI components - shadcn/ui + Tailwind + Radix",
  "author": "SkateHubba Crew <hesh@skatehubba.com>",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts",
      "require": "./src/*.ts"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup src --dts --format esm,cjs --clean",
    "dev": "tsup src --dts --format esm,cjs --watch",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.6.3",
    "tsup": "^8.3.5"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
