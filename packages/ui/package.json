{
  "name": "@skatehubba/ui",
  "version": "0.0.0",
  "private": true,
  "description": "SkateHubba design system â€“ Tamagui-powered, fully tree-shakable, web + native",
  "author": "SkateHubba Crew <hesh@skatehubba.com>",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",

  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts",
      "require": "./src/*.ts"
    }
  },

  "files": [
    "src",
    "dist"
  ],

  "scripts": {
    "build": "tsup src --dts --format esm,cjs --clean",
    "dev": "tsup src --dts --format esm,cjs --watch",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "prepublishOnly": "pnpm run build"
  },

  "peerDependencies": {
    "react": "^18.2.0",
    "react-native": ">=0.74.0"
  },

  "dependencies": {
    "@tamagui/animations-react-native": "^1.90.0",
    "@tamagui/config": "^1.90.0",
    "@tamagui/core": "^1.90.0",
    "@tamagui/font-inter": "^1.90.0",
    "@tamagui/themes": "^1.90.0",
    "tamagui": "^1.90.0",
    "expo-haptics": "^15.0.7",
    "react-native-reanimated": "~3.10.0",
    "react-native-web": "~0.19.12",
    "solito": "^4.0.0"
  },

  "devDependencies": {
    "@types/react": "^18.3.12",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },

  "publishConfig": {
    "access": "restricted"
  },

  "tamagui": {
    "components": ["tamagui", "@tamagui/core"],
    "excludeReactNativeWebExports": [
      "Switch",
      "ProgressBar",
      "Picker",
      "CheckBox",
      "SegmentedControl"
    ]
  }
}
